{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "addToCart": "readonly",
    "removeFromCart": "readonly",
    "updateCartItemQuantity": "readonly",
    "clearCart": "readonly",
    "getCart": "readonly",
    "getCartTotals": "readonly",
    "updateCartCount": "readonly",
    "createProductCard": "readonly",
    "escapeHtml": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "indent": ["warn", 4],
    "no-trailing-spaces": "warn",
    "eol-last": ["warn", "always"]
  }
}
